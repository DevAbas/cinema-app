{
  "env": {
      "browser": true,
      "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:react-hooks/recommended",
    "plugin:jest/recommended"
  ],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "settings": {
    "react": {
        "version": "detect"
    }
  },
  "plugins": [
    "import"
  ],
  "rules": {
      "react/react-in-jsx-scope": "off",
      "semi": [2, "always"],
      "space-before-function-paren": [0, {"anonymous": "always", "named": "always"}],
      "camelcase": 0,
      "no-return-assign": 0
  }
}
